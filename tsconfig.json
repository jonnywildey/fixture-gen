    "skipLibCheck": true,
    "strict": true, /* Enable all strict type-checking options. */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "outDir": "out",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
